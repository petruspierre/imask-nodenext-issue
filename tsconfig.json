{
  "compilerOptions": {
    "pretty": true,
    "target": "ESNext",
    "module": "ESNext",
    // "moduleResolution": "NodeNext", // Uncomment this line -> will trigger the error in the index.ts file
    "moduleResolution": "node", // Comment this line -> will not trigger the error in the index.ts file
    "importHelpers": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "dist/build",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}